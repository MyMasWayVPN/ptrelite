# Database Configuration
DATABASE_URL="postgresql://panel_user:panel_password@localhost:5432/panel_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="development"
PORT=5000
FRONTEND_URL="http://localhost:3000"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Docker Configuration
DOCKER_SOCKET="/var/run/docker.sock"
CONTAINER_NETWORK="panel_network"

# File Upload Configuration
MAX_FILE_SIZE="100MB"
UPLOAD_PATH="/tmp/uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudflare Configuration (untuk production)
CLOUDFLARE_API_TOKEN=""
CLOUDFLARE_ZONE_ID=""

# Email Configuration (untuk reset password)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@yourpanel.com"

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN="http://localhost:3000"

# Container Defaults
DEFAULT_CONTAINER_MEMORY="512m"
DEFAULT_CONTAINER_CPU="0.5"
DEFAULT_CONTAINER_IMAGE="node:18-alpine"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"
